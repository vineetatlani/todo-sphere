{
  "host": "localhost",
  "port": 5000,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "AUTHENTICATION_SECRET",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://yourdomain.com",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    }
  },
  "mongodb": "MONGODB_URI",
  "adminUser": {
    "email": "admin@todoshpere.com",
    "password": "SecureAdmin",
    "firstName": "Admin",
    "lastName": ""  
  },
  "apiLimiter": {
    "windowMs": 10000,
    "max": 5
  }
}
